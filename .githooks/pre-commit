#!/bin/sh
set -eu

echo "---------- Git hook: pre-commit ----------"

# Ruff (imports, lint, and format)
echo ""
echo ">>> [1/3] Running Ruff"
ruff check --select I .
ruff check .
ruff format --check .

# Flake8 (lint)
echo ""
echo ">>> [2/3] Running Flake8"
flake8 .

# MyPy (type checking)
echo ""
echo ">>> [3/3] Running MyPy"
mypy .

echo "------------------------------------------"
