#!/bin/sh
set -eu

echo "---------- Git hook: pre-commit ----------"

# Ruff (imports, lint, and format)
echo ""
echo ">>> [1/4] Running Ruff"
ruff check --select I .
ruff check .
ruff format --check .

# Flake8 (lint)
echo ""
echo ">>> [2/4] Running Flake8"
flake8 .

# MyPy (type checking)
echo ""
echo ">>> [3/4] Running MyPy"
mypy .

# Pyright (type checking)
echo ""
echo ">>> [4/4] Running Pyright"
pyright .

echo "------------------------------------------"
